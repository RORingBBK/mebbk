<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <h2><%= pluralize(@post.errors.count, 'error') %> prevented this post from saving:</h2>
    <ul>
      <% @post.errors.full_mesages.each do |msg| %>
        <%= msg %>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <br>
  <br>

  <%= f.label :content, "Write your article here" %>
  <%= f.text_field :content %>

  <br>
  <br>

  <%= f.submit %>

<% end %>